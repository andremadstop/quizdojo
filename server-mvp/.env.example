# ========================================
# QuizDoji Environment Configuration
# ========================================
# Copy this file to .env and configure for your environment
# IMPORTANT: Change all default passwords and secrets before deployment!

# ========================================
# Database Configuration
# ========================================
POSTGRES_USER=pruefungstrainer
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=pruefungstrainer
POSTGRES_PORT=5432

# Full database connection string (used by API)
DATABASE_URL=postgresql://pruefungstrainer:changeme_in_production@postgres:5432/pruefungstrainer

# ========================================
# API Configuration
# ========================================
API_PORT=8000

# ========================================
# Authentication & Security
# ========================================
# JWT Secret - MUST be changed to a random string (32+ characters)
# Generate with: openssl rand -hex 32
JWT_SECRET=change_this_to_a_random_32_character_string_now

# Token expiration times
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# ========================================
# Admin User (created automatically on first start)
# ========================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme_now  # CHANGE THIS!
ADMIN_USERNAME=admin

# ========================================
# CORS Configuration
# ========================================
# Allowed frontend origin (change to your domain in production)
CORS_ORIGIN=http://localhost:3000

# For production with custom domain:
# CORS_ORIGIN=https://your-domain.com

# ========================================
# Email Configuration (Optional)
# ========================================
# Required only if you want password reset functionality
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@example.com

# ========================================
# Rate Limiting
# ========================================
# Rate limit window in minutes
RATE_LIMIT_WINDOW=15

# Maximum requests per window
RATE_LIMIT_MAX=100

# ========================================
# Frontend Port
# ========================================
FRONTEND_PORT=3000

# ========================================
# Production Deployment Notes
# ========================================
# 1. Generate strong JWT_SECRET: openssl rand -hex 32
# 2. Change ADMIN_PASSWORD to something secure
# 3. Change POSTGRES_PASSWORD to something secure
# 4. Set CORS_ORIGIN to your actual domain
# 5. Configure SMTP if you want password reset emails
# 6. Consider using a secrets manager for sensitive values
# 7. Use HTTPS in production (configure reverse proxy/load balancer)
